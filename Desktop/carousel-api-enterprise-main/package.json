{
    "name": "carousel-api-enterprise",
    "version": "2.0.0",
    "description": "Enterprise-level API для генерации каруселей с продвинутой типографикой",
    "main": "server.js",
    "scripts": {
      "start": "node server.js",
      "dev": "nodemon server.js",
      "test": "jest",
      "test:watch": "jest --watch",
      "test:coverage": "jest --coverage",
      "lint": "eslint src/ --ext .js",
      "lint:fix": "eslint src/ --ext .js --fix",
      "validate": "node -e \"require('./src/config/index').validateConfig()\"",
      "docker:build": "docker build -t carousel-api-enterprise .",
      "docker:run": "docker run -p 3001:3001 carousel-api-enterprise",
      "docker:dev": "docker-compose up --build",
      "fonts:check": "node -e \"const fm = require('./src/services/fontManager'); const f = new fm(); console.log(f.getStats())\"",
      "themes:list": "node -e \"const ds = require('./src/design/themes/index'); const d = new ds(); console.log(d.getAvailableThemes())\"",
      "benchmark": "node scripts/benchmark.js",
      "docs:generate": "node scripts/generateDocs.js"
    },
    "keywords": [
      "carousel", 
      "markdown", 
      "canvas", 
      "api", 
      "typography", 
      "design-system",
      "fonts",
      "layout-engine",
      "enterprise"
    ],
    "author": "Your Name <your.email@example.com>",
    "license": "MIT",
    "dependencies": {
      "express": "^4.18.2",
      "marked": "^9.1.6",
      "canvas": "^2.11.2"
    },
    "devDependencies": {
      "nodemon": "^3.0.1",
      "jest": "^29.7.0",
      "eslint": "^8.54.0",
      "eslint-config-standard": "^17.1.0",
      "eslint-plugin-import": "^2.29.0",
      "eslint-plugin-node": "^11.1.0",
      "eslint-plugin-promise": "^6.1.1",
      "@types/jest": "^29.5.8"
    },
    "engines": {
      "node": ">=18.0.0",
      "npm": ">=8.0.0"
    },
    "repository": {
      "type": "git",
      "url": "https://github.com/yourusername/carousel-api-enterprise"
    },
    "bugs": {
      "url": "https://github.com/yourusername/carousel-api-enterprise/issues"
    },
    "homepage": "https://github.com/yourusername/carousel-api-enterprise#readme",
    "jest": {
      "testEnvironment": "node",
      "collectCoverageFrom": [
        "src/**/*.js",
        "!src/**/*.test.js"
      ],
      "coverageDirectory": "coverage",
      "coverageReporters": ["text", "html", "lcov"]
    },
    "eslintConfig": {
      "extends": ["standard"],
      "env": {
        "node": true,
        "jest": true
      },
      "rules": {
        "no-console": "off",
        "prefer-const": "error"
      }
    },
    "nodemonConfig": {
      "watch": ["src/", "server.js"],
      "ext": "js,json",
      "ignore": ["tests/", "node_modules/"],
      "delay": 1000
    }
  }